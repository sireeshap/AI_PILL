# ===== AI PILLS ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and modify the values for your environment
# This file should NOT be committed to version control

# ===== APPLICATION SETTINGS =====
APP_NAME="AI Pills"
APP_VERSION="1.0.0"
APP_DESCRIPTION="AI Agent Management Platform"
ENVIRONMENT="development"  # development, staging, production, testing
DEBUG=true

# ===== SECURITY SETTINGS =====
# IMPORTANT: Change this secret key for production!
SECRET_KEY="your-secret-key-for-jwt-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# ===== DATABASE SETTINGS =====
# For production, use cloud MongoDB
MONGODB_CONNECTION_STRING="mongodb+srv://username:password@cluster.mongodb.net/"
# For local development
MONGODB_LOCAL_CONNECTION_STRING="mongodb://localhost:27017/"
DATABASE_NAME="ai_pills_db"
MONGODB_MIN_CONNECTIONS=10
MONGODB_MAX_CONNECTIONS=10
USE_LOCAL_MONGODB=true  # Set to false for production

# ===== FILE STORAGE SETTINGS =====
# Storage backend: local, s3, gridfs, gcs, azure
STORAGE_TYPE="local"

# Local storage paths (relative to backend directory)
BASE_UPLOAD_PATH="./uploads"
AGENT_FILES_SUBPATH="agents"
GENERAL_FILES_SUBPATH="general"
TEMP_FILES_SUBPATH="temp"

# File limits (in bytes)
MAX_FILE_SIZE=104857600  # 100MB
MAX_TOTAL_UPLOAD_SIZE=524288000  # 500MB

# File validation
ALLOWED_ARCHIVE_EXTENSIONS=[".zip", ".tar.gz", ".tar.xz", ".tar.bz2"]
VIRUS_SCAN_ENABLED=false

# Cleanup settings
CLEANUP_TEMP_FILES_AFTER_HOURS=24
CLEANUP_ORPHANED_FILES_AFTER_DAYS=7

# ===== AWS S3 CONFIGURATION (for production) =====
# Uncomment and configure for S3 storage
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME="ai-pills-storage"
# S3_UPLOAD_PATH_PREFIX="uploads"

# ===== GOOGLE CLOUD STORAGE CONFIGURATION =====
# Uncomment and configure for GCS storage
# GCS_BUCKET_NAME="ai-pills-storage"
# GCS_PROJECT_ID="your-project-id"
# GCS_CREDENTIALS_PATH="/path/to/credentials.json"

# ===== AZURE BLOB STORAGE CONFIGURATION =====
# Uncomment and configure for Azure storage
# AZURE_STORAGE_CONNECTION_STRING="your-connection-string"
# AZURE_CONTAINER_NAME="ai-pills-storage"

# ===== API SETTINGS =====
API_V1_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:3001"]

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
UPLOAD_RATE_LIMIT_PER_HOUR=10

# ===== AGENT MANAGEMENT SETTINGS =====
MAX_AGENTS_PER_USER=50
MAX_TAGS_PER_AGENT=10
AGENT_NAME_MAX_LENGTH=100
AGENT_DESCRIPTION_MAX_LENGTH=2000

# ===== NOTIFICATION SETTINGS =====
EMAIL_ENABLED=false
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USERNAME="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# ===== LOGGING SETTINGS =====
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH="./logs/ai_pills.log"
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ===== CACHE SETTINGS =====
# REDIS_URL="redis://localhost:6379"
CACHE_TTL_SECONDS=3600

# ===== ENVIRONMENT-SPECIFIC EXAMPLES =====

# For Development:
# ENVIRONMENT="development"
# DEBUG=true
# USE_LOCAL_MONGODB=true
# STORAGE_TYPE="local"
# BASE_UPLOAD_PATH="./uploads"

# For Production:
